<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= pageTitle %></title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 p-6 font-sans">

  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold text-purple-700 mb-6"><%= user.firstName %> <%= user.lastName %></h1>
    <p class="mb-2 text-lg"><strong>Email:</strong> <%= user.email %></p>
    <p class="mb-6 text-lg"><strong>User Type:</strong> <%= user.userType %></p>

    <!-- Favourites -->
    <div class="bg-white p-6 rounded-xl shadow-md mb-8">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Favourites (<%= user.favourites.length %>)</h2>
      <% if (user.favourites.length === 0) { %>
        <p class="text-gray-500">No favourites added.</p>
      <% } else { %>
        <ul class="list-disc list-inside text-purple-700">
          <% user.favourites.forEach(home => { %>
            <li><strong><%= home.houseName %></strong> — <%= home.location %></li>
          <% }) %>
        </ul>
      <% } %>
    </div>

    <!-- Bookings -->
    <div class="bg-white p-6 rounded-xl shadow-md">
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">Bookings (<%= user.bookings.length %>)</h2>
      <% if (user.bookings.length === 0) { %>
        <p class="text-gray-500">No bookings made.</p>
      <% } else { %>
        <ul class="list-decimal list-inside text-green-700">
          <% user.bookings.forEach(home => { %>
            <li><strong><%= home.houseName %></strong> — <%= home.location %></li>
          <% }) %>
        </ul>
      <% } %>
    </div>
  </div>

</body>
</html>
