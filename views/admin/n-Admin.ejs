<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= pageTitle %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
  </head>
  <body
    class="bg-gradient-to-br from-slate-100 via-white to-slate-200 min-h-screen font-sans text-gray-800"
  >
    <div class="max-w-7xl mx-auto px-4 py-10">
      <div class= "flex justify-between"> 
      <h1 class="text-4xl font-extrabold text-purple-700 mb-10">
        ðŸ“Š Admin Dashboard
      </h1>
      <form action="/logout" method="POST" class="inline-block">
          <button
            type="submit"
            class="text-sm text-white bg-purple-600 hover:bg-purple-700 px-4 py-2 rounded-md shadow transition"
          >
            ðŸšª Logout
          </button>
        </form>
        </div>

      <!-- Summary Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <div class="bg-white shadow-xl rounded-2xl p-6 hover:shadow-2xl transition">
          <div class="flex items-center justify-between">
            <div>
              <h2 class="text-lg font-semibold text-gray-600">Total Users</h2>
              <p class="text-3xl font-bold text-purple-700 mt-2">
                <%= totalUsers %>
              </p>
            </div>
            <i class="fas fa-users text-purple-500 text-4xl"></i>
          </div>
        </div>

        <div class="bg-white shadow-xl rounded-2xl p-6 hover:shadow-2xl transition">
          <div class="flex items-center justify-between">
            <div>
              <h2 class="text-lg font-semibold text-gray-600">Total Favourites</h2>
              <p class="text-3xl font-bold text-purple-700 mt-2">
                <%= totalFavourites %>
              </p>
            </div>
            <i class="fas fa-heart text-red-400 text-4xl"></i>
          </div>
        </div>

        <div class="bg-white shadow-xl rounded-2xl p-6 hover:shadow-2xl transition">
          <div class="flex items-center justify-between">
            <div>
              <h2 class="text-lg font-semibold text-gray-600">Total Bookings</h2>
              <p class="text-3xl font-bold text-purple-700 mt-2">
                <%= totalBookings %>
              </p>
            </div>
            <i class="fas fa-book text-green-500 text-4xl"></i>
          </div>
        </div>
      </div>

      <!-- User Details Table -->
      <div class="bg-white shadow-xl rounded-2xl p-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">
          ðŸ‘¥ All User Details
        </h2>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-purple-100">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                  Full Name
                </th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                  Email
                </th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                  User Type
                </th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                  No of Favourites
                </th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                  No of Bookings
                </th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-100">
              <% userDetails.forEach(user => { %>
                <% if (user.userType === "admin") { %>

                <tr class="hover:bg-purple-50 transition">
                  <td class="px-6 py-4 font-medium text-red-800">
                    Permission Denied 
                  </td>
                  <% } else { %>
                <tr class="hover:bg-purple-50 transition">
                  <td class="px-6 py-4 font-medium text-gray-800">
                    <%= user.fullName %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-600">
                    <%= user.email %>
                  </td>
                  <td class="px-6 py-4 capitalize text-sm font-semibold text-purple-600">
                    <%= user.userType %>
                  </td>
                  <td class="px-6 py-4 text-sm font-semibold text-purple-600">
                    <%= user.favourites %>
                  </td>
                  <td class="px-6 py-4 text-sm font-semibold text-purple-600">
                    <%= user.bookings %>
                  </td>
                  <td class="px-6 py-4">
                    <a
                      href="/admin/user/details/<%= user.id %>"
                      class="text-sm text-white bg-purple-600 hover:bg-purple-700 px-4 py-2 rounded-md shadow transition"
                    >
                      View Details
                    </a>
                  </td>
                </tr>
                <% } %>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
